{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:recommended", ":disableDependencyDashboard", "helpers:pinGitHubActionDigests"],
  "labels": ["dependencies"],
  "lockFileMaintenance": {
    "enabled": true,
    "automerge": true
  },
  "packageRules": [
    {
      "description": "Do not create pin-only PRs (keep library-style semver ranges)",
      "matchUpdateTypes": ["pin", "pinDigest"],
      "enabled": false
    },
    {
      "description": "Never automerge major updates",
      "matchUpdateTypes": ["major"],
      "automerge": false
    },
    {
      "description": "Automerge safe devDependency updates after a short soak",
      "matchDepTypes": ["devDependencies"],
      "matchUpdateTypes": ["minor", "patch"],
      "minimumReleaseAge": "3 days",
      "automerge": true
    },
    {
      "description": "Automerge runtime patch updates after a short soak",
      "matchDepTypes": ["dependencies"],
      "matchUpdateTypes": ["patch"],
      "minimumReleaseAge": "3 days",
      "automerge": true
    },
    {
      "description": "Runtime minor updates - slower cadence, manual merge",
      "matchDepTypes": ["dependencies"],
      "matchUpdateTypes": ["minor"],
      "minimumReleaseAge": "7 days",
      "automerge": false
    },
    {
      "description": "Always track wreq pre-releases on Cargo",
      "matchManagers": ["cargo"],
      "matchPackageNames": ["wreq", "wreq-util"],
      "ignoreUnstable": false,
      "respectLatest": false
    }
  ]
}
